{
    "name": "C++ Development",
    "image": "slack_bot",
    "runArgs": [
        "-it",
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
    ],
    "postCreateCommand": "cmake . && make",
    "remoteUser": "root"
}

