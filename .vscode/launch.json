{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/workspaces/cpp_dev/src/slack_bot", // 実行ファイルのパスを指定
            "args": [], // 必要な引数があればここに追加
            "stopAtEntry": false,
            "cwd": "/usr/src",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // ビルドタスクを指定
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
